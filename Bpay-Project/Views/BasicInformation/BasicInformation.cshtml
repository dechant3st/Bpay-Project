
@{
    ViewData["Title"] = "Basic Information";
Layout = null;
}

<meta name="viewport" content="width=device-width, initial-scale=1" />
<link href="~/css/basicinfo.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div class="bpay-logo-section bg-white">
    <img class="bpay-logo" src="~/images/bpaylogo.png" />
</div>
<div class="content-section" style="background-color:#e9e9e9">
    <div class="text-center" style="padding:10px 0">
        <h2 class="content-title">Basic Information Details</h2>
    </div>
    <div class="row info-section">
        <div class="col-md-12">
            <form>
                <div class="form-group">
                    <label for="" class="control-label">First Name*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Last Name*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Middle Name*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6 col-6">
                        <label for="" class="control-label">Suffix (Jr, II, Etc)</label>
                        <input class="form-control txtbox" type="text" />
                    </div>

                    <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6 col-6">
                        <label for="" class="control-label">Birth Date*</label>
                        <input class="form-control txtbox" type="date" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Mobile Number*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Email Address*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Password*</label>
                    <input class="form-control txtbox" type="text" />
                </div>
                <div class="form-group text-center">
                    <p><input type="checkbox" value="" />      By Creating this account, I agree to  <a href="#">Buyani Privacy Policy</a></p>
                </div>
            </form>
            <div style="padding-top:50px">
                <div style="display:inline-block;float:left;padding-top:10px">
                    <a href="#" style="color:#0b549d;">< Back</a>
                </div>
                <div style="display:inline-block;float:right">
                    <input type="button" asp-controller="registration" asp-action="registration" style="color:white;background-color:#0b549d;border:none;padding:10px 20px" value="Submit" />
                    <a class="btnreg" asp-controller="basicinformation" asp-action="registration">test</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="padding:30px 0 30px 0;text-align:center" class="footer">
    <h6>
        Powered By <img style="width:100px" src="~/images/Buyani.png" />
    </h6>
</div>

